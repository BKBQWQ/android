<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_file"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="34sp" />

    <Button
        android:id="@+id/button_putfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存" />

    <Button
        android:id="@+id/button_getfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取出" />

    <Button
        android:id="@+id/button_file1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="file操作_写入" />

    <Button
        android:id="@+id/button_file2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="file操作_读出" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backgroud" />
</LinearLayout>